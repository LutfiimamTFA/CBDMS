
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Avatars can be read by anyone, but only the user themselves can write.
    match /avatars/{userId} {
      allow read;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Logos can be read by anyone, but only authenticated users can write.
    match /logos/{companyId} {
        allow read;
        allow write: if isSignedIn();
    }

    // Attachments can be read by anyone who has the URL.
    // Writes are allowed by any authenticated user.
    // Security is enforced by Firestore rules controlling access to the URL.
    match /attachments/{taskId}/{attachmentId} {
      allow read;
      allow write: if isSignedIn();
    }
    
    // Social media uploads can be written by authenticated users.
    match /social-media/{companyId}/{mediaId} {
      allow read;
      allow write: if isSignedIn();
    }

    // Deny all other reads and writes by default for security.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
