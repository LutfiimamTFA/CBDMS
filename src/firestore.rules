
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.role == 'Super Admin';
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function getRequestingUserData() {
        return getUserData(request.auth.uid);
    }

    // Function to get the permissions document
    function getPermissions() {
      return get(/databases/$(database)/documents/permissions/roles).data;
    }
    
    // Function to check a specific permission for a given role
    function hasPermission(role, permission) {
      return getPermissions()[role][permission] == true;
    }

    function isRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    function isSameCompanyAsRequestingUser(entityCompanyId) {
        return getRequestingUserData().companyId == entityCompanyId;
    }

    // Rules for 'permissions' collection
    match /permissions/{docId} {
      // Only Super Admins can read or write the permission settings.
      allow read, write: if isSuperAdmin();
    }

    // Rules for 'users' collection
    match /users/{userId} {
      allow read: if isSuperAdmin() || 
                     (isRole('Manager') && isSameCompanyAsRequestingUser(resource.data.companyId)) ||
                     request.auth.uid == userId;
      
      allow update: if isSuperAdmin() || 
                       (isRole('Manager') && isSameCompanyAsRequestingUser(resource.data.companyId) && hasPermission('Manager', 'canManageUsers')) ||
                       request.auth.uid == userId;

      // Create and delete must be handled by secure server functions.
      // We check for dynamic permissions as an extra layer, though it will always be false.
      allow create: if isSuperAdmin() || (isRole('Manager') && hasPermission('Manager', 'canManageUsers'));
      allow delete: if isSuperAdmin() || (isRole('Manager') && hasPermission('Manager', 'canDeleteUsers'));
      
      // Notification subcollection rules
      match /notifications/{notificationId} {
        // A user can read/update/delete their own notifications.
        allow read, update, delete: if isSignedIn() && request.auth.uid == userId;
        // Any signed-in user can create a notification for another user (for @mentions).
        allow create: if isSignedIn();
      }
    }

    // Rules for 'tasks' collection
    match /tasks/{taskId} {
      allow read: if isSuperAdmin() ||
                     (isRole('Manager') && isSameCompanyAsRequestingUser(resource.data.companyId)) ||
                     (isRole('Employee') && request.auth.uid in resource.data.assigneeIds) ||
                     (isRole('Client') && isSameCompanyAsRequestingUser(resource.data.companyId) && hasPermission('Client', 'canViewAssignedTasks'));
                     
      allow create: if isSuperAdmin() ||
                       (isRole('Manager') && hasPermission('Manager', 'canCreateTasks')) ||
                       (isRole('Employee') && hasPermission('Employee', 'canCreateTasks'));

      allow update: if isSuperAdmin() || 
                       (isRole('Manager') && isSameCompanyAsRequestingUser(resource.data.companyId)) ||
                       (isRole('Employee') && request.auth.uid in resource.data.assigneeIds);
      
      allow delete: if isSuperAdmin() || (isRole('Manager') && hasPermission('Manager', 'canDeleteTasks'));

      // Rules for timeTracking subcollection
      match /timeTracking/{timeTrackingId} {
          allow read, create, update, delete: if isSuperAdmin() || 
                               (isRole('Manager') && isSameCompanyAsRequestingUser(get(/databases/$(database)/documents/tasks/$(taskId)).data.companyId)) ||
                               (isRole('Employee') && request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.assigneeIds && hasPermission('Employee', 'canTrackTime'));
      }
      
      // Rules for activities subcollection
      match /activities/{activityId} {
        // Any user who can read the task can also read its activities.
        allow read: if isSignedIn() && (
            isSuperAdmin() ||
            (isRole('Manager') && isSameCompanyAsRequestingUser(get(/databases/$(database)/documents/tasks/$(taskId)).data.companyId)) ||
            (request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.assigneeIds)
        );
        // Only users who can update the task can create activity logs.
        allow create: if isSignedIn() && (
             isSuperAdmin() || 
             (isRole('Manager') && isSameCompanyAsRequestingUser(get(/databases/$(database)/documents/tasks/$(taskId)).data.companyId)) ||
             (isRole('Employee') && request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.assigneeIds)
        );
        // Activities are immutable.
        allow update, delete: if false;
      }
    }
    
    // Rules for 'navigationItems' collection
    match /navigationItems/{navItemId} {
        // Allow read for any signed-in user, visibility is handled client-side.
        allow read: if isSignedIn();
        // Only Super Admins can create, update, or delete navigation items.
        allow write: if isSuperAdmin();
    }
    
    // Deny all other access by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

    